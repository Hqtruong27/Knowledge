{
  "ConnectionStrings": {
    "KnowledgeDbContext": "Server=.,1433;Database=Knowledge_dev;User ID=admin;Password=1;Max Pool Size=100;Pooling=true;"
  },
  "Serilog": {
    "Using": [ "SeriLog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
                "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u4}] {Message:lj} [{SourceContext}]{NewLine}{Exception}"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/base/development/log_.log",
                "rollingInterval": "Day",
                /*{MachineName}*/
                "outputTemplate": "[{EnvironmentUserName}]| [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}]|[{Level:u4}]|{ThreadId}|[{SourceContext}.{Method}]|{Message:lj}{NewLine}{Exception}",
                "retainedFileCountLimit": 7
              }
            }
          ]
        }
      },
      {
        "Name": "Logger",
        "Args": {
          "Name": "Async",
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "(@Level = 'Error' or @Level = 'Fatal' or @Level = 'Warning')"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "Async",
                "Args": {
                  "configure": [
                    {
                      "Name": "File",
                      "Args": {
                        "path": "Logs/ex/development/ex_.log",
                        "outputTemplate": "[{EnvironmentUserName}]| [{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}]|[{Level:u4}]|{ThreadId}|[{SourceContext}.{Method}]|{Message:lj}{NewLine}{Exception}",
                        "rollingInterval": "Day",
                        "retainedFileCountLimit": 7
                      }
                    }
                  ]
                }
              }
            ]
          }
        }
      }
      //{
      //  "Name": "File",
      //  "Args": {
      //    "path": "Logs/base/llog_.json",
      //    "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
      //  }
      //}
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Properties": {
      "Application": "KnowledgeLogger"
    }
  }
}
